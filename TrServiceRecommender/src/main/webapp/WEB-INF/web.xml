<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>TRRuSST Web Application</display-name>

    <servlet>
        <servlet-name>AutomaticServiceRecommender</servlet-name>
        <servlet-class>org.trrusst.software.recommender.AutomaticServiceRecommender</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AutomaticServiceRecommender</servlet-name>
        <url-pattern>/AutomaticServiceRecommender</url-pattern>
    </servlet-mapping>

</web-app>